<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <ImageView
            android:layout_width="106dp"
            android:layout_height="187dp" app:srcCompat="@drawable/kakao01" android:id="@+id/imageViewRow"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="96dp" android:layout_marginTop="16dp"
            android:adjustViewBounds="true"

            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.2"
    />
    <TextView
            android:textSize="25dp"
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textViewRowContents"
            app:layout_constraintStart_toEndOf="@+id/imageViewRow"
            android:layout_marginStart="20dp" app:layout_constraintTop_toBottomOf="@+id/textViewTitle"
            android:layout_marginTop="16dp"/>
    <TextView

            android:textSize="20dp"
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textViewTitle"
            app:layout_constraintStart_toEndOf="@+id/imageViewRow"
            android:layout_marginStart="28dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>